{{#if isLoggedIn}}
   {{>login_page_header}}
{{else}}
  {{>log_header}}
{{/if}}
{{#if isWrong}}
    {{#each errors}}
      <div class="alert">   
      <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
      <strong>Retry!</strong> {{this.msg}} 
      </div>   
    {{/each}}
{{/if}}
<div class="page-container">
   <div class="col-sm-8">
   	<img src="img/log_back3.jpg" style="height: 1150px;width: 1200px;">
   	<!--h1 style="position: absolute;top: 8%;left: 30%;font-size: 70px;color: #ffd31d;font-family: 'Berkshire Swash';">Welcome to</h1>
   	<h1 style="position: absolute;top: 17%;left: 50%;font-size: 70px;color: #ffd31d;font-family: 'Berkshire Swash';">Masterpieces</h1-->
   <h3 style="position: absolute;top: 9%;left: 29%;font-family: 'Patrick Hand';">Masterpieces</h3>
   </div>
   <div class="col-sm-4" style="background-color: #28df99;height: 1150px;">
   	<h1 style="text-align: center;font-weight: bolder;font-size: 60px;font-family: 'Sofia';margin-top:10px;padding-bottom: 0px;">Welcome :)</h1>
   	<div class="wrapper fadeInDown">
  		<div id="formContent">
    		<!-- Tabs Titles -->
        <h2 class="active" href="">Sign Up </h2>
    		<a href="login"><h2 class="inactive underlineHover" > Log In </h2></a>
    		

    <!-- Icon -->
    		

    <!-- Login Form -->
    		<form method="POST" action="submit_signup">
      			<input type="text" id="username" class="fadeIn first" name="username" placeholder="Username">
      			<input type="text" id="first_name" class="fadeIn second" name="first_name" placeholder="First Name">
            <input type="text" id="middle_name" class="fadeIn third" name="middle_name" placeholder="Middle Name">
            <input type="text" id="last_name" class="fadeIn third" name="last_name" placeholder="Last Name">
            <input type="text" id="password" class="fadeIn third" name="password" placeholder="Password">
            <input type="text" id="phone_no" class="fadeIn third" name="phone_no" placeholder="PhoneNo">
            <input type="text" id="email_id" class="fadeIn third" name="email_id" placeholder="Email">
            <label for="dob">Date of Birth:</label>
            <input type="date" id="dob" class="fadeIn third" name="dob" placeholder="Date of Birth">
            <input type="text" id="street" class="fadeIn third" name="street" placeholder="Street">
            <input type="text" id="city" class="fadeIn third" name="city" placeholder="City">
            <input type="text" id="state" class="fadeIn third" name="state" placeholder="State">
            <input type="text" id="country" class="fadeIn third" name="country" placeholder="Country">
      			<input type="submit" class="fadeIn fourth" value="Sign Up">
    		</form>

    <!-- Remind Passowrd -->
    		<div id="formFooter">
      			<a class="underlineHover" href="#">Forgot Password?</a>
    		</div>

  		</div>
	</div>
   </div>
</div>
{{>footer}}